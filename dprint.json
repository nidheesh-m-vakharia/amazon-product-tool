{
  "typescript": {
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": "always", // Always use semicolons for clarity and avoiding ASI issues
    "quoteStyle": "preferDouble", // Prefer double quotes for consistency across JSON and other formats
    "trailingCommas": "always", // Use trailing commas for easier diffs and cleaner code
    "useTabs": false, // Use spaces instead of tabs for indentation
    "newLineKind": "lf"
  },
  "json": {
  },
  "markdown": {
  },
  "toml": {
  },
  "malva": {
  },
  "markup": {
  },
  "yaml": {
  },
  "excludes": [
    "**/node_modules",
    "**/*-lock.json"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.94.0.wasm",
    "https://plugins.dprint.dev/json-0.20.0.wasm",
    "https://plugins.dprint.dev/markdown-0.18.0.wasm",
    "https://plugins.dprint.dev/toml-0.7.0.wasm",
    "https://plugins.dprint.dev/g-plane/malva-v0.11.2.wasm",
    "https://plugins.dprint.dev/g-plane/markup_fmt-v0.19.0.wasm",
    "https://plugins.dprint.dev/g-plane/pretty_yaml-v0.5.0.wasm"
  ]
}
